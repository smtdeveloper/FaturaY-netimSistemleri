@using FaturaYönetimSistemleri.Models.Entities
@model List<ElectricityBill>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}







<!-- Start home -->
<section class="bg-half page-next-level">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center text-white">
                    <div class="section-title text-center mb-4 pb-2">
                        <h4 class="title title-line pb-5"> Elektrik Faturalarım  </h4>

                    </div>
                    <ul class="page-next d-inline-block mb-0">
                        <li><a href="/UserPanel/Index" class="text-uppercase font-weight-bold">Ana Sayfa</a></li>

                        <li>
                            <span class="text-uppercase text-white font-weight-bold"> Elektrik Fatularım  </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- JOB LIST START -->
<section class="section pt-0">
    <div class="container">


        <div class="row">


            <div class="col-lg-12 mt-4 pt-2">


                <div class="row">
                    @if (Model.Count > 0)
                    {
                        <h4> Sayın  " <b> @ViewBag.VfullName </b> " ödemediğiniz Fatularınız ! </h4>
                        foreach (var item in Model)
                        {
                            <div class="col-lg-12 mt-4 pt-2">
                                <div class="job-list-box border rounded">
                                    <div class="p-3">
                                        <div class="row align-items-center">
                                            <div class="col-lg-2">
                                                <div class="company-logo-img">
                                                    <img src="https://upload.wikimedia.org/wikipedia/tr/7/77/Teda%C5%9F_logo_.gif" alt="" class="img-fluid mx-auto d-block">
                                                </div>
                                            </div>
                                            <div class="col-lg-7 col-md-9">
                                                <div class="job-list-desc">
                                                    <h6 class="mb-2"><a href="#" class="text-dark"> @item.ElectricityBillDate.ToShortDateString() </a></h6>
                                                    <p class="text-muted mb-0"><i class="mdi mdi-bank mr-2"></i> @item.ElectricityBillDescription </p>
                                                    <ul class="list-inline mb-0">
                                                        <li class="list-inline-item mr-3">
                                                            <p class="text-muted mb-0"><i class="mdi mdi-map-marker mr-2"></i>@item.ElectricityBillCompanyName</p>
                                                        </li>

                                                        <li class="list-inline-item">
                                                            <p class="text-muted mb-0"> @item.ElectricityBillPrice ₺ </p>
                                                        </li>
                                                    </ul>
                                                    <span class="badge badge-success"> Sıra no  : @item.ElectricityBillSerialNumber </span>
                                                    <span class="badge badge-success"> Seri no  : @item.ElectricityBillSequenceNo </span>
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-3">
                                                <div class="job-list-button-sm text-right">


                                                    <div class="mt-3">
                                                        <a href=" /UserElectricityBill/Payment/@item.ElectricityBillID" class="btn btn-lg btn-primary">Hemen Öde</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                <div class="alert alert-success col-12" role="alert">
                   
                    <h3 class="text-center bg-dark text-white p-2 m-2 "> @ViewBag.VfullName  Ödemelerinizi yaptığınız için teşekkürler :) </h3>
                </div>
                      
                    }

                    <br />
                    <br />
                    <hr />

                </div>
            </div>
        </div>
    </div>
</section>
<!-- JOB LIST START -->