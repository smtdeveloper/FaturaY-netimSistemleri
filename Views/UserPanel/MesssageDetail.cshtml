@using FaturaYönetimSistemleri.Models.Entities
@model List<Message>


@{
    ViewBag.Title = "MesssageDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>AdminLTE 3 | Read Mail</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body>


    <!-- Start home -->
    <section class="bg-half page-next-level">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="text-center text-white">
                        <h4 class="text-uppercase title mb-4">İletişim </h4>
                        <ul class="page-next d-inline-block mb-0">
                            <li><a href="/UserPanel/Index" class="text-uppercase font-weight-bold">Ana Sayfa</a></li>
                            <li><a href="/UserPanel/OutgoingMessage" class="text-uppercase font-weight-bold">Mesajlarım</a></li>
                            <li>
                                <span class="text-uppercase text-white font-weight-bold">Mesaj Detayları</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end home -->
    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->

  

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

              

                <!-- /.col -->
                @foreach (var item in Model)
                {
                    <div class="col-md-12 m-2 p-2" >

                        <div class="card card-primary card-outline">

                            <div class="card-header">

                                <h3 class="card-title p-4">Mesajı Detayı</h3>

                                

                            </div>

                            <!-- /.card-header -->

                            <div class="card-body p-0">

                                <div class="mailbox-read-info">

                                    <h5 class="m-2" > Konu : @item.Title  </h5>

                                    <h6  >

                                        Gönderen : @item.Sender

                                        <span class="mailbox-read-time float-right">  Tarih : @item.Date  </span>

                                    </h6>

                                </div>

                                <!-- /.mailbox-read-info -->

                                <div class="mailbox-controls with-border text-center">

                                    <div class="btn-group">

                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">

                                            <i class="far fa-trash-alt"></i>

                                        </button>



                                    </div>

                                    <!-- /.btn-group -->

                                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">

                                        <i class="fas fa-print"></i>

                                    </button>

                                </div>

                                <!-- /.mailbox-controls -->

                                <div class="mailbox-read-message">



                                    <p class="p-4 m-2" >

                                        @item.Comment

                                    </p>





                                </div>

                                <!-- /.mailbox-read-message -->

                            </div>

                            <!-- /.card-body -->

                           

                            <!-- /.card-footer -->

                            <div class="card-footer">

                                <div class="float-right">



                                    <a href="/UserPanel/NewMessage" class="btn btn-default"> <i class="fas fa-share"></i> Cevapla </a>

                                </div>

                                <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</button>

                                <button type="button" class="btn btn-default"><i class="fas fa-print"></i> Yazdır</button>

                            </div>

                            <!-- /.card-footer -->

                        </div>

                        <!-- /.card -->

                    </div>
                }


                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div>

    </section>

    <!-- /.content -->
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->

    <aside class="control-sidebar control-sidebar-dark">

        <!-- Control sidebar content goes here -->

    </aside>

    <!-- /.control-sidebar -->
    </div>

    <!-- ./wrapper -->
    <!-- jQuery -->

    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap 4 -->

    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE App -->

    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->

    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>

</body>

</html>

