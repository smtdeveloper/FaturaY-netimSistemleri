@model FaturaYönetimSistemleri.Models.Entities.Message

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Start home -->
<section class="bg-half page-next-level">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center text-white">
                    <h4 class="text-uppercase title mb-4">İletişim </h4>
                    <ul class="page-next d-inline-block mb-0">
                        <li><a href="/UserPanel/Index" class="text-uppercase font-weight-bold">Ana Sayfa</a></li>
                        <li>
                            <span class="text-uppercase text-white font-weight-bold">İletişim</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- MAP START -->
<!-- CONTACT END -->
<!-- CONTACT FORM START -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 col-md-7 mt-4 pt-2">
                <div class="custom-form rounded border p-4">
                    <div id="message"></div>
                    <form class="form-group" method="post">
                        <div class="row">

                            <div class="col-lg-12">
                                <div class="form-group app-label">
                                    <label class="text-muted">Konu</label>
                                    <input type="text" class="form-control resume" id="subject" name="Title" placeholder="konu..">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group app-label">
                                    <label class="text-muted">Mesajınız</label>
                                    <textarea id="comments" rows="5" class="form-control resume" name="Comment" placeholder="mesajınızı yazın.."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <input onclick="MailSend()" type="submit" id="submit" name="send" class="submitBnt btn btn-primary" value="Gönder">
                              
                                <div id="simple-msg"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-4 col-md-5 mt-4 pt-2">
                <div class="border rounded text-center p-4">
                    <h5 class="text-dark pb-3"> Bizimle iletişime geçin  </h5>
                    <div class="contact-location rounded mt-5 p-4">
                        <div class="contact-location-icon bg-white text-primary rounded-pill">
                            <i class="mdi mdi-whatsapp"></i>
                        </div>
                        <p class="text-muted pt-4 f-20 mb-0"> 0543 668 1999 </p>
                    </div>
                    <br />
                    <hr />
                    <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                        <i class="fab fa-instagram"></i>
                    </a>


                    <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                        <i class="fab fa-linkedin-in"></i>
                    </a>


                    <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                        <i class="fab fa-github"></i>
                    </a>
                    <br />
                    <hr />
                </div>
            </div>
        </div>
    </div>
</section>
<!-- CONTACT FORM END -->


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 p-0">
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d6030.418742494061!2d-111.34563870463673!3d26.01036670629853!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2smx!4v1471908546569" style="border: 0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>




<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function MailSend() {
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Başarılı, Mail Gönderildi',
            showConfirmButton: false,
            timer: 1500
        })
    }
</script>
