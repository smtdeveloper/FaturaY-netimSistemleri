@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<FaturaYönetimSistemleri.Models.Entities.Dues>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> <a href="/Dues/Index">Aidatlar</a>      </li>
</ol>




<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kullanıcı</th>
            <th scope="col">Aidat Ücreti</th>
            <th scope="col">Tarih</th>
            <th scope="col">Acıklama</th>
            <th scope="col">Durumu</th>
            <th scope="col"></th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.DuesID</th>
                <th scope="row">@item.User.FirstName @item.User.LastName</th>
                <th scope="row">@item.Price TL</th>
                <th scope="row">@item.Date.ToShortDateString()</th>
                <th scope="row">@item.Description</th>
                <th scope="row">
                    @if (item.Status)
                    {
                        <h5 class="alert-success text-center"> Ödendi </h5>
                    }
                    else
                    {
                        <h5 class="alert-secondary text-center"> Aidat Ödenmedi  </h5>

                    }
                </th>
                <th>   <a href="/Dues/DuesUpdate/@item.DuesID" class="btn btn-outline-warning"> Güncelle </a> </th>
                <th>
                    @if (item.Status)
                    {
                        <a href="/Dues/DuesStatus/@item.DuesID" class="btn btn-secondary"> İptal et </a>
                    }
                    else
                    {
                        <a href="/Dues/DuesStatus/@item.DuesID" class="btn btn-outline-primary"> Elden Ödedi </a>

                    }
                </th>

            </tr>
        }


    </tbody>
</table>

