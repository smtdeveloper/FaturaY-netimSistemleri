@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<FaturaYönetimSistemleri.Models.Entities.WaterBill>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> <a href="/WaterBill/Index"> Su  Faturaları </a>      </li>
</ol>




<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> Kullanıcı </th>
            <th scope="col"> Seri No</th>
            <th scope="col"> Sıra No</th>
            <th scope="col"> Şirket</th>
            <th scope="col"> Fiyat</th>
            <th scope="col"> Tarih</th>
            <th scope="col"> Acıklama</th>
            <th scope="col"> Durumu </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.WaterBillID</th>
                <th scope="row">@item.User.FirstName @item.User.LastName</th>
                <th scope="row">@item.WaterBillSerialNumber</th>
                <th scope="row">@item.WaterBillSequenceNo</th>
                <th scope="row">@item.WaterBillCompanyName</th>
                <th scope="row">@item.WaterBillPrice TL</th>
                <th scope="row">@item.WaterBillDate</th>
                <th scope="row">@item.WaterBillDescription</th>
                <th>
                    @if (item.WaterBillStatus)
                    {
                        <h5 class="alert-success text-center"> Ödendi </h5>
                    }
                    else
                    {
                <h5 class="alert-secondary text-center">Fatura Ödenmedi  </h5>

                    }
                </th>


            </tr>
        }


    </tbody>
</table>




