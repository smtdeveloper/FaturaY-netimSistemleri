                                    </ul>

                                    <ul class="list-inline mb-0">

                                        @if (item.ApartmentOwner)
                                        {
                                            <li class="list-inline-item">
                                                <p class="text-dark mb-0"><i class="mdi mdi-home mr-2"></i> <b> Ev Sahibi </b> </p>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="list-inline-item">
                                                <p class="text-dark mb-0"><i class="mdi mdi-home mr-2"></i> <b> Kiracı </b>  </p>
                                            </li>
                                        }


                                    </ul>

                                    <ul class="list-inline mb-2">




                                        <li class="list-inline-item">
                                            <p class="text-muted"><i class="mdi mdi-cellphone-iphone mr-2"></i> @item.Phone </p>
                                        </li>
                                    </ul>
                                    <ul class="list-inline mb-2">


                                        <li class="list-inline-item">
                                            <p class="text-muted"> Tc No :   @item.TCNo </p>
                                        </li>


                                    </ul>
                                    <ul class="list-inline mb-2">


                                        <li class="list-inline-item">
                                            <p class="text-muted"> Parola :   @item.Password </p>
                                        </li>


                                    </ul>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h3 class="text-center" > Araç Plakalarım </h3>
                <div class="border-top border-bottom pt-4 pb-4">
                    <div class="row justify-content-sm-center">
                        <div class="col-lg-2 col-md-3 col-6">
                            <div class="text-sm-center m-14">
                                <h5 class="text-dark mb-2"> @item.CarsPlate </h5>
                               
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        }





    </div>
</section>
<!-- EMPLOYERS DETAILS END -->
